@model About

<div class="row">
    <div class="col-12">
        <div class="card border-top border-0 border-4 border-dark">
            <div class="card-body p-5">
                <div class="card-title text-center">
                    <h1 class="mb-5 mt-2 text-light">Hakkımızda Düzenle</h1>
                </div>
                <hr>
                <form class="row g-3" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />

                    <div class="col-12">
                        <label asp-for="ImageUrl" class="form-label">Resim</label>
                        <img src="@Model.ImageUrl" width="200px" />
                        <input type="file" class="form-control border-start-0" name="img" id="img" accept="*/image">
                        <span class="text-danger" asp-validation-for="ImageUrl"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Title" class="form-label">Başlık</label>
                        <input type="text" class="form-control border-start-0" asp-for="Title" placeholder="Başlık">
                        <span class="text-danger" asp-validation-for="Title"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Description" class="form-label">Açıklama</label>
                        <textarea asp-for="Description" class="form-control ckeditor"
                                  placeholder="Açıklama" rows="4"></textarea>
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Status" class="form-label">Durumu</label>
                        <select class="form-select mb-3" asp-for="Status">
                            <option value="true">Aktif</option>
                            <option value="false">Pasif</option>
                        </select>
                    </div>
                    <div class="col-12">
                        <div class="d-grid">
                            <button type="submit" class="btn btn-dark btn-lg px-5">Kaydet</button>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="d-grid">
                            <button asp-area="Management" asp-controller="About" asp-action="Index" class="btn btn-danger btn-lg px-5">Kaydetme</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
