@model MainPage
<section class="banner_main">
    <div id="myCarousel" class="carousel slide banner" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="first-slide" src="@Model.ImageUrl1" width="1600" height="795" alt="First slide">
                <div class="container">
                </div>
            </div>
            <div class="carousel-item">
                <img class="second-slide" src="@Model.ImageUrl2" width="1600" height="795" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="third-slide" src="@Model.ImageUrl3" width="1600" height="795" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="booking_ocline">
        <div class="container">
            <div class="row">
                <div class="col-md-5">
                    <div class="book_room">
                        <h1>@Model.Title1</h1>
                        <p>@Html.Raw(Model.Description1)</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end banner -->
<!-- about -->
<div class="about">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-5">
                <div class="titlepage">
                    <h2>@Model.Title2</h2>
                    <p>@Html.Raw(Model.Description2)</p>
                </div>
            </div>
            <div class="col-md-7">
                <div class="about_img">
                    <figure><img src="@Model.ImageUrl4" alt="#" /></figure>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end about -->
<!-- our_room -->
<div class="our_room">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="titlepage">
                    <h2>EVLERİMİZ</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model.Houses.Take(6))
            {
                <div class="col-md-4 col-sm-6">
                    <div id="serv_hover" class="room">
                        <div class="room_img">
                            <a asp-controller="Gallery" asp-action="Index" asp-route-id="@item.Id"><figure><img src="@item.ImageUrl" alt="#" /></figure></a>
                        </div>
                        <div class="bed_room">
                            <h2>@item.Title</h2>
                            <p>@item.Description </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>